@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="initial-scale=1">
    <meta name="description" content="Helping the Guardian-around-town find all their missing Shaders &amp; Emblems">
    @*<link rel="canonical" href="TODO!!!!!!">*@
    <title>@ViewBag.Title</title>
    <!--[if gt IE 8]><!-->
    <link rel="stylesheet" href="/assets/css/index.css?v=1.0.2"><!--<![endif]-->
    <!--[if lte IE 8]>
        <link rel="stylesheet" href="/assets/css/index-ie8.css?v=1.0.2"><![endif]-->
    @Scripts.Render("~/bundles/modernizr")
    <!--[if lte IE 8]>
    <script src="/assets/js/lib/vendor/html5shiv.js?v=1.0.2"></script><![endif]-->
    <link rel="icon" type="image/png" href="/assets/img/meta/favicon-16x16.png?v=1.0.2" sizes="16x16">
    <link rel="icon" type="image/png" href="/assets/img/meta/favicon-32x32.png?v=1.0.2" sizes="32x32">
    <!--[if IE]><link rel='shortcut icon' type='image/x-icon' href=versionPath('/favicon.ico'))<![endif]-->
    <link rel="icon" type="image/png" href="/assets/img/meta/android-chrome-192x192.png?v=1.0.2" sizes="192x192">
    <meta name="theme-color" content="#67ae99">
    <link rel="manifest" href="/manifest.json">
    <link rel="mask-icon" href="/assets/img/meta/safari-pinned-tab.svg?v=1.0.2" color="#67ae99">
    <meta name="apple-mobile-web-app-title" content="Guardian Outfitter">
    <link rel="apple-touch-icon" href="/assets/img/meta/apple-touch-icon.png?v=1.0.2" sizes="180x180">
    <meta name="application-name" content="Guardian Outfitter">
    <meta name="msapplication-TileImage" content="/assets/img/meta/mstile-144x144.png?v=1.0.2">
    <meta name="msapplication-TileColor" content="#67ae99">
</head>
<body>
    <a id="top"><span class="is-vhidden">Top of page</span></a>
    <div class="a11y-navigation"><a href="#content">Jump to Main content</a><a href="#navigation">Jump to Primary navigation</a></div>
    <header role="banner" class="main-header">
        <div class="content-center content-center--gutter">
            <h1>
                <a href="/" class="main-header__container">
                    <div class="grid grid--middled">
                        <div class="grid__item one-half">
                            <div class="site-logo icon icon--logo"></div>
                        </div>
                        <div class="grid__item one-half align-right">
                            <div class="site-title">Guardian Outfitter</div>
                        </div>
                    </div>
                </a>
            </h1>
        </div>
    </header>
    <main id="content" role="main" class="main-content">
        <div class="content-center content-center--gutter">
            @RenderBody()
        </div>
    </main>
    <footer role="contentinfo" class="main-footer">
        <div class="content-center content-center--gutter">
            <div class="main-footer__container">
                <div class="grid grid--bottomed">
                    <div class="grid__item tablet-one-half">
                        <p>&copy; 2017 Guardian Outfitter</p>
                    </div>
                    <div class="grid__item tablet-one-half">
                        <div class="credit">
                            <a href="https://avaclanche.uk/" target="_blank" class="credit__link">
                                <div aria-hidden="true" class="credit__logo icon icon--avalanche-uk"></div>
                                <div class="credit__details"><small>Proudly brought to you by</small><br><small>the Guardians at Avalanche UK</small></div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="/assets/js/build/index.js?v=1.0.2" async defer></script>
    <script>
    (function(i, s, o, g, r, a, m) {
        i['GoogleAnalyticsObject'] = r;
        i[r] = i[r] || function() {
            (i[r].q = i[r].q || []).push(arguments)
        }, i[r].l = 1 * new Date();
        a = s.createElement(o),
            m = s.getElementsByTagName(o)[0];
        a.async = 1;
        a.src = g;
        m.parentNode.insertBefore(a, m)
    })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

    ga('create', 'UA-89214827-1', 'auto');
    ga('send', 'pageview');
    </script>
</body>
</html>